package com.campusFacilities.www.service.Imp

import java.awt.print.Book;
import java.time.LocalDate;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.campusFacilities.www.model.Library.IssueRecord;
import com.campusFacilities.www.repository.Library.BookRepository;
import com.campusFacilities.www.repository.Library.IssueRecordRepository;

@Service
public class LibraryController{

    @Autowired
    private BookRepository bookRepository;

    @Autowired
    private IssueRecordRepository issueRecordRepository;


    // Add Book
    public Book addBook(Book book) {
        
        return bookRepository.save(book);
    }

    // Update Book
    public Book updateBook(Long bookId, Book bookDetails) {
        Book book = bookRepository.findById(bookId).orElse(null);
        return null;
    }

    // Delete Book
    public void deleteBook(Long bookId) {
        bookRepository.deleteById(bookId);
    }

    // Get All Books
    public List<Book> getAllBooks() {
        return bookRepository.findAll();
    }

    // ================= ISSUE OPERATIONS =================

    // Issue Book
    public IssueRecord issueBook(IssueRecord issueRecord) {
        Book book = issueRecord.getBook();
      
        bookRepository.save(book);

        issueRecord.setIssueDate(LocalDate.now());
        issueRecord.setDueDate(LocalDate.now().plusDays(14));

        return issueRecordRepository.save(issueRecord);
    }

    // Return Book
    public IssueRecord returnBook(Long issueId) {
        IssueRecord record = issueRecordRepository.findById(issueId).orElse(null);

        if (record != null) {
            record.setReturnDate(LocalDate.now());

            Book book = record.getBook();
          
            bookRepository.save(book);

            return issueRecordRepository.save(record);
        }
        return null;
    }

    // Delete Issue Record
    public void deleteIssueRecord(Long issueId) {
        issueRecordRepository.deleteById(issueId);
    }

    // Get All Issued Books
    public List<IssueRecord> getAllIssuedBooks() {
        return issueRecordRepository.findAll();
    }
}
