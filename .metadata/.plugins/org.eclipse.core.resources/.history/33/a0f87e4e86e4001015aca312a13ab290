package com.campusFacilities.www.service.Imp;

import java.time.LocalDate;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.campusFacilities.www.model.Library.IssueRecord;
import com.campusFacilities.www.repository.Library.IssueRecordRepository;

@Service
public class LibraryServiceImpl {

    @Autowired
    private IssueRecordRepository issueRecordRepository;

    // Add / Issue Book
    public IssueRecord issueBook(IssueRecord issueRecord) {
        issueRecord.setIssueDate(LocalDate.now());
        return issueRecordRepository.save(issueRecord);
    }

    // Return Book
    public IssueRecord returnBook(Long issueId) {
        IssueRecord record = issueRecordRepository.findById(issueId).orElse(null);

        if (record != null) {
            record.setReturnDate(LocalDate.now());
            return issueRecordRepository.save(record);
        }

        return null;
    }

    // Get all issued books
    public List<IssueRecord> getAllIssuedBooks() {
        return issueRecordRepository.findAll();
    }

    // Update IssueRecord
    public IssueRecord updateIssueRecord(Long issueId, IssueRecord updatedRecord) {
        IssueRecord record = issueRecordRepository.findById(issueId).orElse(null);

        if (record != null)
        {
        
            record.setIssueDate(updatedRecord.getIssueDate());
            record.setReturnDate(updatedRecord.getReturnDate());
            return issueRecordRepository.save(record);
        }
        return null;
    }

    // Delete IssueRecord
    public void deleteIssueRecord(Long issueId) {
        issueRecordRepository.deleteById(issueId);
    }
}
